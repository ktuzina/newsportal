<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %></head>
<body>
<% include ../partials/nav.ejs %>

<div class="container">
    <br/>
    <h3>Добавление новости</h3>

    <form action="/admin/create-article" method="post" enctype="multipart/form-data">
        <div class="form-group row">
            <label for="Section" class="col-sm-3 col-form-label">Раздел:</label>
            <div class="col-sm-9">
                <select name="section" class="custom-select">
                    <% sections.forEach(function(section) { %>
                        <option value="<%= section.id%>"><%= section.name%></option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="title" class="col-sm-3 col-form-label">Название:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="title" name="title" placeholder="Название">
            </div>
        </div>
        <div class="form-group row">
            <label for="summary" class="col-sm-3 col-form-label">Краткое описание:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="summary" name="summary" placeholder="Краткое описание">
            </div>
        </div>
        <div class="form-group row">
            <label for="description" class="col-sm-3 col-form-label">Текст статьи:</label>
            <div class="col-sm-9">
                <textarea type="text" rows="15" class="form-control" id="description" name="description" placeholder="Текст статьи"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="description" class="col-sm-3 col-form-label">Изображение:</label>
            <div class="col-sm-9">
                <input type="file" class="form-control" id="discount" name="picture" placeholder="Изображение">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </form>

</div>

<% include ../partials/footer.ejs %>

</body>
</html>
