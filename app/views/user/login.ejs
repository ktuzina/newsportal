<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %></head>
<body>
<% include ../partials/nav.ejs %>

<div class="container">
    <br/>
    <h3>Войти</h3>

    <% if(messages.error){%>
        <div class="alert alert-danger">
            <%= messages.error%>
        </div>

    <% }%>
    <form action="/login" method="post">
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-1 col-form-label">Логин:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" id="inputPassword3" name="username" placeholder="Логин">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-1 col-form-label">Пароль:</label>
            <div class="col-sm-5">
                <input type="password" class="form-control" id="inputPassword3" name="password" placeholder="Пароль">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Войти</button>
                <a href="/sign-up" class="btn btn-secondary" role="button">Зарегистрироваться</a>
            </div>
        </div>
    </form>

</div>

<div class="footer">
    <% include ../partials/footer.ejs %>
</div>

</body>
</html>